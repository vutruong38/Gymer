<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical"
    tools:context=".activity.UpLoadPostActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@drawable/bg_toolbar"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/up_back"
                android:paddingRight="20dp"
                android:src="@drawable/ic_back_white_24dp"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@+id/up_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm bài viết mới" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/up_tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tiêu đề bài viết" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/up_noidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập nội dung bài viết" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/up_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập link bài viết" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="Chọn hình ảnh" />

        <ImageView
            android:id="@+id/img_load"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="#000"
            android:padding="40dp"
            android:src="@drawable/ic_add_a_photo_black_24dp" />
        <Button
            android:id="@+id/btnload"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn_primary"
            android:text="Cập nhật thay đổi"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16dp" />
        <ProgressBar
            android:id="@+id/up_probar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>



</LinearLayout>