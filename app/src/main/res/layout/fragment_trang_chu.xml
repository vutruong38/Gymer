<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clicktc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.TrangChuFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
<Button
    android:id="@+id/btndangbai"
    android:textAllCaps="false"
    android:layout_marginHorizontal="16dp"
    android:visibility="gone"
    android:layout_marginVertical="8dp"
    android:textSize="16sp"
    android:textColor="#fff"
    android:background="@drawable/bg_btn_primary"
    android:text="Thêm bài tập mới"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
        <ViewFlipper
            android:id="@+id/viewflippertrangchu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_toolbar">

        </ViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comfortaa_light"
                android:text="Các bài tập cho bạn"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleviewmanhinhchinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>