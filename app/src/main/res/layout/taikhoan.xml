<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    `

    <android.support.v4.widget.NestedScrollView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_drawer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="-170dp"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_av"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_below="@id/txtemail"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/user"
                    app:civ_border_color="#fff"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/tk_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Truong Vu"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="abc@gmail.com"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingTop="45dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Thông tin cá nhân"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:inputType="date"
                    android:layout_height="wrap_content"
                    android:id="@+id/ieditns"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:drawablePadding="11dp"
                    android:hint="Nhập ngày sinh"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="11dp"
                    android:id="@+id/ieditsdt"
                    android:hint="Nhập SĐT"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/ieditcc"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_height_black_24dp"
                    android:drawablePadding="15dp"
                    android:hint="Nhập chiều cao"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/ieditcn"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_weight_black_24dp"
                    android:drawablePadding="11dp"
                    android:hint="Nhập cân nặng"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:textSize="16dp" />

                <Button
            android:id="@+id/btncn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn_primary"
            android:text="Cập nhật thay đổi"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16dp" />
        </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>